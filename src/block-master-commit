#!/usr/bin/env bash

# ---------------------------------------------------------------------------------------- #
# Description                                                                              #
# ---------------------------------------------------------------------------------------- #
#                                                                                          #
# ---------------------------------------------------------------------------------------- #

if branch=$(git rev-parse --abbrev-ref HEAD 2>&1); then
    if [[ "${branch}" = "master" ]]; then
        echo "You cannot commit to the master branch - Aborting!"
        exit 1
    fi
fi

# ---------------------------------------------------------------------------------------- #
# End of Script                                                                            #
# ---------------------------------------------------------------------------------------- #
# This is the end - nothing more to see here.                                              #
# ---------------------------------------------------------------------------------------- #
